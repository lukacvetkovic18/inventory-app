{
   "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target":"es6",
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "rootDir": ".",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir":"dist",
      "baseUrl": ".",
      "paths": {
         "*": ["node_modules/*"]
      },
      "noImplicitAny": false,
      "lib": ["es6"],

   }
}

